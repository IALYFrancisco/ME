<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="../../css/APIs.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="../../img/logo-de-IALY.png" type="image/x-icon">
    <title>APIs | Backoffice - ME</title>
</head>
<body>
    <main class="container">
        <section class="left">
            <%- include('Sidebar') -%>
        </section>
        <section class="right">
            <%- include('Header') -%>
            <div class="title-container">
                <h1>APIs</h1>
            </div>
            <div class="actions">
                <button class="keygen" onclick="showModal()">Generate API key</button>
            </div>
            <section class="apikey-list">
                <table>
                <% keys.forEach(key => { %>
                    <tr>
                        <td>
                            <p><%- key.api_key -%></p>
                        </td>
                        <td>
                            <p><%- key.project_id -%></p>
                        </td>
                        <td>
                            <p>25 Avril 2025</p>
                        </td>
                        <td>
                            <p class="api-actions">
                                <img src="../../img/del.png" alt="">
                                <img src="../../img/ed.png" alt="">
                            </p>
                        </td>
                    </tr>
                <% }) %>
                </table>
            </section>
        </section>
        <div class="overlay" onclick="closeModal()"></div>
        <form action="" class="modal">
            <h3>Generating API key</h3>
            <section>
                <label for="name">Name :</label>
                <input type="name" name="name" id="name" required>
            </section>
            <section>
                <label for="password">Password :</label>
                <input type="password" name="password" id="password" required>
            </section>
            <div class="button-container">
                <button>Generate</button>
            </div>
        </form>
    </main>
</body>
<script src="../../js/APIs.js"></script>
</html>